---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContactInfo from '../../components/ContactInfo.astro';
import CallToAction from '../../components/CallToAction.astro';
import { formatPrice } from '../../utils/formatPrice';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products', (p) => p.data.published);
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { product } = Astro.props;
const { data } = product;
const { Content } = await product.render();
const spec = data.specifications;
const imageList = (data.images ?? []).map((i) => (typeof i === 'string' ? i : (i as { image: string }).image));
---

<BaseLayout
  title={data.title}
  description={data.description.slice(0, 160)}
  image={data.mainImage}
>
  <article class="mx-auto max-w-6xl px-4 py-12 sm:px-6 lg:px-8">
    <div class="grid gap-10 lg:grid-cols-2 lg:gap-16">
      <div class="space-y-4">
        <div class="aspect-square overflow-hidden rounded-xl bg-coffee-100">
          <img
            src={data.mainImage}
            alt={data.title}
            class="h-full w-full object-cover"
            width="600"
            height="600"
          />
        </div>
        {imageList.length > 1 && (
          <div class="flex gap-2 overflow-x-auto pb-2">
            {imageList.map((img) => (
              <img
                src={img}
                alt=""
                class="h-20 w-20 shrink-0 rounded-lg object-cover"
                width="80"
                height="80"
              />
            ))}
          </div>
        )}
      </div>

      <div>
        {data.category && (
          <p class="text-sm font-medium uppercase tracking-wider text-coffee-500">{data.category}</p>
        )}
        <h1 class="mt-1 text-3xl font-bold text-coffee-900 sm:text-4xl">{data.title}</h1>
        <p class="mt-4 text-2xl font-semibold text-coffee-700">{formatPrice(data.price, data.currency)}</p>
        <div class="mt-6 prose prose-coffee max-w-none">
          <p class="text-coffee-700">{data.description}</p>
        </div>

        {spec && (spec.origin || spec.roastLevel || spec.process || spec.altitude || spec.flavor) && (
          <dl class="mt-8 grid gap-3 sm:grid-cols-2">
            {spec.origin && (
              <>
                <dt class="text-sm font-medium text-coffee-500">Xuất xứ</dt>
                <dd class="text-sm text-coffee-900">{spec.origin}</dd>
              </>
            )}
            {spec.roastLevel && (
              <>
                <dt class="text-sm font-medium text-coffee-500">Mức rang</dt>
                <dd class="text-sm text-coffee-900">{spec.roastLevel}</dd>
              </>
            )}
            {spec.process && (
              <>
                <dt class="text-sm font-medium text-coffee-500">Quy trình</dt>
                <dd class="text-sm text-coffee-900">{spec.process}</dd>
              </>
            )}
            {spec.altitude && (
              <>
                <dt class="text-sm font-medium text-coffee-500">Độ cao</dt>
                <dd class="text-sm text-coffee-900">{spec.altitude}</dd>
              </>
            )}
            {spec.flavor && (
              <>
                <dt class="text-sm font-medium text-coffee-500">Hương vị</dt>
                <dd class="text-sm text-coffee-900">{spec.flavor}</dd>
              </>
            )}
          </dl>
        )}

        <div class="mt-8 prose prose-coffee max-w-none">
          <Content />
        </div>

        <div class="mt-10 flex flex-wrap gap-4">
          <CallToAction href="/contact" text="Liên hệ đặt hàng" variant="primary" />
        </div>

        <div class="mt-12">
          <ContactInfo />
        </div>
      </div>
    </div>
  </article>
</BaseLayout>
